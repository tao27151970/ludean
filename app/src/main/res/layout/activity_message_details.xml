<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical"
    tools:context=".activity.MessageDetailsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/tit_back"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@mipmap/back" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:text=""
            android:textColor="@color/black"
            android:textSize="20sp" />
    </RelativeLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/functionType4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/driverName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:text=""
            android:textColor="@color/black_333"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/driverCert"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:text=""
            android:textColor="@color/black_333"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/driverExaminationTime"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:text=""
            android:textColor="@color/black_333"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/driverExamination_differ_time"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:text=""
            android:textColor="@color/black_333"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/isExamination"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:text=""
            android:textColor="@color/black_333"
            android:textSize="18sp" />
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/functionType3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/plateNum3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:text=""
            android:textColor="@color/black_333"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/carBrand3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:text=""
            android:textColor="@color/black_333"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/carVersion3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:text=""
            android:textColor="@color/black_333"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/upkeepItem"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:text=""
            android:textColor="@color/black_333"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/mileage"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:text=""
            android:textColor="@color/black_333"
            android:textSize="18sp" />

    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/functionType2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/plateNum"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:text=""
            android:textColor="@color/black_333"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/carBrand"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:text=""
            android:textColor="@color/black_333"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/carVersion"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:text=""
            android:textColor="@color/black_333"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/annualExaminationTime"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:text=""
            android:textColor="@color/black_333"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/annualExamination_differ_time"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:text=""
            android:textColor="@color/black_333"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/isExamination2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:text=""
            android:textColor="@color/black_333"
            android:textSize="18sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/functionType1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/content"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:text=""
            android:textColor="@color/black_333"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/updateDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:paddingRight="20dp"
            android:background="@color/white"
            android:gravity="center_vertical|right"
            android:paddingLeft="30dp"
            android:textColor="@color/black_333"
            android:textSize="18sp" />

    </LinearLayout>
</LinearLayout>